package com.class10;

public class Arrays {
	public static void main (String[]args) {
		int num;
		
		int num=10; //int num=10;
		int[] array1; //declare an array-->preferred way
		int[] array2; //declare an array
		int array3[]; //declare an array
		
		array1=new int [4];//initialize, create an array
		//assigning the value
		array1[0]=10;
		array1[1]=20;
		array1[2]=30;
		array1[3]=40;
		//access the values
		
		System.out.println(array1[0]);
		
		//another way, a combination of both ways kinda
		int [] numbers=new int [3];
		
		numbers[0]=5;
		numbers[1]=10;
		numbers[2]=15;
		
		System.out.println(numbers[2]);
		
		
	}

}
